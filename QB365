// Feature Card
function FeatureCard({ img, bg, title, text }) {
  return (
    <div
      style={{
        background: bg,
        borderRadius: "20px",
        padding: "2.1rem 1.2rem 1.3rem 1.2rem",
        textAlign: "center",
        boxShadow: "0 1px 7px #0002",
        minHeight: 325,
      }}
    >
      <img src={img} alt={title} style={{ width: 80, marginBottom: 18 }} />
      <h3 style={{ fontSize: "1.18rem", marginBottom: "0.6rem", color: "#1e3c72" }}>{title}</h3>
      <p style={{ color: "#2a3a4a" }}>{text}</p>
    </div>
  );
}

// Step Box
function StepBox({ no, title, text, color }) {
